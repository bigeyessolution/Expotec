<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.bigeyessolution.Expotec" version="0.0.1">
    <name>Expotec</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="laudivan@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Laudivan Freire de Almeida
    </author>
    <author email="azevedo@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Washington Luiz Santos Azevedo
    </author>
    <content src="index.html"/>
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="false"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
